@page
@model MovieListRazor.Pages.MovieList.IndexModel


<br />

<div class="container row p-0 m0">
    <div class="col-9">
        <h2 class="text-info"> Movie List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create new Movie</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if(Model.Movies.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Movies.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(m=>m.Movies.FirstOrDefault().Genre)*@
                            <label asp-for="Movies.FirstOrDefault().Genre"></label>
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(m=>m.Movies.FirstOrDefault().Genre)*@
                            <label asp-for="Movies.FirstOrDefault().IMDbURL"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach(var item in Model.Movies)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.IMDbURL)
                    </td>
                    <td>
                        <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this entry?')" class="btn btn-danger btn-sm">Delete</button>
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                    </td>
                </tr>
                    }
                </table>
            }
            else
            {
                <p>NO MOVIES AVAILABLE</p>
            }
        </form>
    </div>

</div>

